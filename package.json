{
    "name": "winzones",
    "version": "0.0.0",
    "description": "A TypeScript library for mapping between IANA and Windows time zones",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md,yml}\"",
        "generate": "tsx scripts/generate-timezone-data.ts",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "npm run build && changeset publish",
        "prepublishOnly": "npm run build"
    },
    "publishConfig": {
        "provenance": true
    },
    "keywords": [
        "timezone",
        "timezones",
        "iana",
        "windows",
        "tzdata",
        "time-zone",
        "mapping"
    ],
    "author": {
        "name": "James Birtles",
        "email": "james.birtles@execify.ai"
    },
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "@types/node": "^24.0.10",
        "cldr-core": "^47.0.0",
        "effect": "^3.16.12",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=20"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Execify/winzones.git"
    },
    "bugs": {
        "url": "https://github.com/Execify/winzones/issues"
    },
    "homepage": "https://github.com/Execify/winzones#readme"
}
